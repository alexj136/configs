[colors]
background = #002b36
background-alt = #657b83
foreground = #eee8d5
foreground-alt = #586e75
primary = #268bd2
secondary = #2aa198

S_yellow  = #b58900
S_orange  = #cb4b16
S_red     = #dc322f
S_magenta = #d33682
S_violet  = #6c71c4
S_blue    = #268bd2
S_cyan    = #2aa198
S_green   = #859900

[bar/mybar]
override-redirect = false
width = 100%
height = 22
offset-x = 0
offset-y = 0
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Inconsolata:size=11

modules-left = i3
modules-center = xwindow
modules-right = filesystem cpu temperature memory volume battery date time

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = ${colors.background}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = true

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.S_red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.S_red}

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = HDD %percentage_used%%
format-mounted-underline = ${colors.S_yellow}

[module/cpu]
type = internal/cpu
interval = 5
format-underline = ${colors.S_orange}
label = CPU %percentage%%

[module/temperature]
type = internal/temperature
interval = 5
thermal-zone = 0

label = TMP %temperature%
format = <label>
format-underline = ${colors.S_red}

[module/memory]
type = internal/memory
interval = 2
format-underline = ${colors.S_magenta}
label = RAM %percentage_used%%

[module/volume]
type = internal/volume

label-volume = VOL %percentage%%
label-volume-foreground = ${colors.foreground}
format-volume = <label-volume>
format-volume-underline = ${colors.S_violet}

label-muted = VOL %percentage%%
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.S_violet}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

label-discharging = BAT %percentage%%
label-charging = BAT %percentage%%
label-full = BAT %percentage%%

format-discharging = <label-discharging>
format-discharging-foreground = ${colors.foreground}
format-discharging-underline = ${colors.S_blue}

format-charging = <label-charging>
format-charging-foreground = ${colors.foreground-alt}
format-charging-underline = ${colors.S_blue}

format-full = <label-full>
format-full-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.S_blue}

[module/date]
type = internal/date
interval = 5

date = "%a %d %b %Y"
date-alt =
format-underline = ${colors.S_cyan}

label = %date%

[module/time]
type = internal/date
interval = 5

time = %H:%M
time-alt =
format-underline = ${colors.S_green}

label = %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 0
